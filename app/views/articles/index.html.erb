<div id="page-content1">
  <h1 class="text-center mt-4">Listing all articles</h1>

  <div class="container">
    <% @articles.each do |article| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow md-5 bg-white rounded">
            <div class="card-header font-italic">
              by Manas
            </div>
            <div class="card-body">
              <h5 class="card-title"> <%= link_to article.title, article_path(article), class: "text-success" %> </h5>
              <p class="card-text"><%= truncate(article.description, length: 100) %></p>
              <a href="#" class="btn btn-outline-success">View</a>
              <a href="#" class="btn btn-outline-info">Edit</a>
              <a href="#" class="btn btn-outline-danger">Delete</a>
            </div>
            <div class="card-footer text-muted">
              <samll>Created <%= time_ago_in_words(article.created_at) %> ago, Edited <%= time_ago_in_words(article.updated_at) %> ago </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Create new article", new_article_path %>
</div>